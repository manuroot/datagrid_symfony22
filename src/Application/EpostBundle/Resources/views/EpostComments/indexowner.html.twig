                   <td>
     <a href="{{ path('epostnotes_delete', { 'id': entity.id }) }}">
                        <img src="{{ asset('bundles/applicationepost/images/delete.png') }}" alt="delete" width="15" height="15" />
                    </a>
                </td>
                #}

                    </tr>
        {% endfor %}
                </tbody>
            </table>

  {{ knp_pagination_render(paginationa) }}

    {% endblock %}
