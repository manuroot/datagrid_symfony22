                    </a>
                             
                    <div class="sonata-blog-post-tag-list">
                        {% for tag in entity.tags %}
                             <span class="label label-inverse">
                            <a href="{{ url('epost', {'tag': tag.slug} ) }}">{{ tag.name }}</a>
                            {% if not loop.last%}, {%endif%}
                             </span>
                            {% else %}
