{% extends "ApplicationCertificatsBundle::layout.html.twig" %}

  {% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('bundles/applicationcertificats/css/sliding.css') }}" type="text/css" media="all"/>

 {% endblock %}

{% block content_header '' %}

{% block title %}
    Groupes
{% endblock %}
    
    
{% block content %}
   
{% for type, flashMessages in app.session.flashbag.all() %}
    {% for flashMessage in flashMessages %}
<div class="alert alert-{{ type }}">
            {{ flashMessage|trans }}
    </div>
    {% endfor %}
{% endfor %}
    
      <a href="{{ path('chronogroup_new') }}" class="btn btn-small btn-primary">Ajouter Groupe</a>
    <br> <br> 
    
    <table class="table table-striped table-bordered table-hover">

    <thead>
        <tr>
            <th>Id</th>
            <th>Nomgroup</th>
             <th>Description</th>
              <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('chronogroup_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nomGroup }}</td>
<td>{{ entity.description }}</td>
<td>{{ entity.email }}</td>
             <td>
                    <a href="{{ path('chronogroup_show', { 'id': entity.id }) }}">
                        <img src="{{ asset('bundles/applicationcertificats/images/detail.png') }}" alt="notes_show" width="15" height="15" />
                    </a>
                </td>
                <td>


                    <a href="{{ path('chronogroup_edit', { 'id': entity.id }) }}">
                        <img src="{{ asset('bundles/applicationcertificats/images/edit.png') }}" alt="notes_edit" width="15" height="15" />
                    </a>
                </td>
           
        </tr>
    {% endfor %}
    </tbody>
</table>


    {% endblock %}
