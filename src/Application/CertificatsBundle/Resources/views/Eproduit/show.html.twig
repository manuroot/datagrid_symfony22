{% extends "ApplicationCertificatsBundle::layout.html.twig" %}

  {% block stylesheets %}
{{ parent() }}
      <link rel="stylesheet" href="{{ asset('bundles/applicationcertificats/css/sliding.css') }}" type="text/css" media="all"/>
     
 {% endblock %}

{% block content_header '' %}
{% block title %}
PRODUIT: {{ entity.name }}
{% endblock %}

{% block content %}
     <br>  
{#{ path }#}
     <a href="{{ path('eproduit') }}" class="btn btn-small btn-success">Retour</a>
<a href="{{ path('eproduit_edit', { 'id': entity.id }) }}" class="btn btn-small btn-warning">Editer</a>
<br> <br> 

  <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
            <th>Categorie</th>
               <td>{{ entity.categorie.nom }}</td>
          
        </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description|raw }}</td>
            </tr>
            <tr>
                <th>Image</th>
         <td> {% if entity.imageName is not null %}               
           
         
         <img width="200px" src="{{ vich_uploader_asset(entity, 'image') }}" alt="{{ entity.imageName }}" />
         {% else %}
           ---
         {% endif %}
                {#   <td> <img src="{{ asset('uploads/eproduits/51603dde20000.png') }}"/></td> #}
        
      </td>
       </tr>
            
        </tbody>
    </table>

    
   
{% endblock %}
