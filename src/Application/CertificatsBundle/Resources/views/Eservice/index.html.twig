{% extends "ApplicationCertificatsBundle::layout.html.twig" %}

  {% block stylesheets %}
{{ parent() }}
      <link rel="stylesheet" href="{{ asset('bundles/applicationcertificats/css/sliding.css') }}" type="text/css" media="all"/>
     
 {% endblock %}

{% block content_header '' %}
{% block title %}
LISTE DES SERVICES 
{% endblock %}
{% block content %}

{% for type, flashMessages in app.session.flashbag.all() %}
    {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|trans }}
        </div>
    {% endfor %}
{% endfor %}


    <h1>Eservice list</h1>


<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="title">
                <th>Id</th>
                <th>Datefin</th>
                <th>Name</th>
                <th>Description</th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
       {% for entity in pagination %}

            <tr>
                <td><a href="{{ path('eservice_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.dateFin %}{{ entity.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                
                <td>
                    <a href="{{ path('eservice_show', { 'id': entity.id }) }}">
                        <img src="{{ asset('bundles/applicationcertificats/images/detail.png') }}" alt="show" width="15" height="15" />
                    </a>
                </td>
                <td>


                    <a href="{{ path('eservice_edit', { 'id': entity.id }) }}">
                        <img src="{{ asset('bundles/applicationcertificats/images/edit.png') }}" alt="edit" width="15" height="15" />
                    </a>
                </td>
                   <td>
     <a href="{{ path('eservice_delete', { 'id': entity.id }) }}">
                        <img src="{{ asset('bundles/applicationcertificats/images/delete.png') }}" alt="delete" width="15" height="15" />
                    </a>
                </td>
         
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('eservice_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
