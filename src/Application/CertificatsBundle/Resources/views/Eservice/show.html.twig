{% extends "ApplicationCertificatsBundle::layout.html.twig" %}

  {% block stylesheets %}
{{ parent() }}
      <link rel="stylesheet" href="{{ asset('bundles/applicationcertificats/css/sliding.css') }}" type="text/css" media="all"/>
     
 {% endblock %}

{% block content_header '' %}
{% block title %}
LISTE DE MES SERVICES 
{% endblock %}
{% block content %}
       
<a href="{{ path('eservice') }}" class="btn btn-small btn-success">Retour</a>

<a href="{{ path('eservice_edit', { 'id': entity.id }) }}" class="btn btn-small btn-warning">Editer</a>
<br> <br> 

  <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                    <th>Proprietaire</th>
                    <td>
           {{ entity.demandeur }}   
                 </td>
                    </tr>
                    
                    <tr>
                <th>Datefin</th>
                <td>{{ entity.dateFin|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description|raw }}</td>
            </tr>
            
            
            <tr>
                    <th>Utilisateurs</th>
                    <td>
           {{ entity.idusers|join(', ') }}   
                 </td>
                    </tr>
        </tbody>
    </table>

    
{% endblock %}
